{
  "name": "music-platform",
  "version": "1.0.0",
  "description": "Music Platform Backend - Spotify-like Database System",
  "main": "dist/server.js",
  "scripts": {
    "dev": "cross-env ENV=local ts-node-dev --respawn src/server.ts",
    "build": "cross-env ENV=production tsc",
    "start": "cross-env ENV=production node dist/server.js",
    "prod": "npm run build && ENV=production npm run start",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typeorm": "cross-env ENV=local typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d src/configs/data-source.ts src/migrations/AutoMigration",
    "migration:generate:name": "npm run typeorm -- migration:generate -d src/configs/data-source.ts src/migrations/%npm_config_name%",
    "migration:run": "npm run typeorm -- migration:run -d src/configs/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/configs/data-source.ts",
    "migration:show": "npm run typeorm -- migration:show -d src/configs/data-source.ts",
    "migration:create": "npm run typeorm -- migration:create src/migrations/%npm_config_name%",
    "seed": "cross-env ENV=local ts-node src/seeds/index.ts"
  },
  "keywords": [
    "Node.js",
    "ExpressJS",
    "TypeScript",
    "REST API",
    "PostgreSQL",
    "TypeORM",
    "Winston",
    "Swagger",
    "Music Platform",
    "Spotify"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "flatted": "^3.3.3",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.27",
    "uuid": "^13.0.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
